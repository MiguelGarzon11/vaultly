---
import { ClientRouter } from "astro:transitions";
import SideBar from "../components/Sidebar";
import Dasheader from "../components/Dasheader";
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title ? `${title}` : "Vaultly"}</title>
    <ClientRouter />
  </head>
  <body>
    <main
      class="h-full w-full flex flex-row bg-dark-back/60 items-start caret-transparent"
    >
      <SideBar isOpen />
      <div class="flex flex-col w-full h-full">
        <Dasheader />
        <hr />
        <div class="p-4 sm:p-12">
          <slot />
        </div>
      </div>
    </main>
  </body>
</html>

<style is:global>
  @import "tailwindcss";
  @import "../styles/global.css";
</style>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    caret: transparent;
  }
</style>
