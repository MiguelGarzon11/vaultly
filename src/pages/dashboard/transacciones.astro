---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import Maintransaction from "../../shared/components/maintransaction.astro";
---

<DashboardLayout title="Transacciones">
  <div class="flex flex-col gap-2 sm:gap-3 w-full relative">
    <h1 class="text-xl md:text-2xl text-text font-medium">Transacciones</h1>
    <p class="text-sm md:text-lg text-text font-extralight">Administre todas sus transacciones</p>
    <button class="absolute right-0 bg-primary px-5 py-3 rounded-2xl flex justify-between gap-3 active:scale-95 hover:bg-primary/80">
      <img src="/assets/icons/plus.svg" alt="Icono boton de nueva transacción" class="size-4 sm:size-5 "> 
      <p class="text-sm font-extralight text-white">Nueva Transacción</p>
    </button>
    <Maintransaction></Maintransaction>
  </div>
</DashboardLayout>
