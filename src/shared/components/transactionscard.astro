---

const transactions: any[] | null = [
//   { description: "Compra en Supermercado", amount: "5000", date: "2024-06-10" },
//   { description: "Pago de Nómina", amount: "200000", date: "2024-06-09" },
//   { description: "Suscripción a Streaming", amount: "1500", date: "2024-06-08" },
];
---


<a href="/dashboard/transacciones" class="size-full cursor-pointer hover:drop-shadow-lg hover:drop-shadow-secondary-text/30 active:drop-shadow-lg active:drop-shadow-secondary-text/30 h-auto">
    <div class="size-full rounded-2xl p-10 bg-white flex flex-col justify-start space-y-2.5">
        <h1 class="text-lg font-medium text-text">Actividad Reciente</h1>
        <p class="text-sm font-extralight mb-5">Tus últimas transacciones</p>
        <div class="space-y-3">
            {transactions.length <= 0 && (
                <div class="flex w-full justify-center items-center">
                    <button class="bg-primary px-3 py-3 flex justify-between items-center rounded-2xl gap-2 hover:scale-105">
                        <img src="/assets/icons/plus.svg" alt="Icono boton de nueva transacción" class="size-5"/> 
                        <p class="text-white text-sm">Nueva transacción</p>
                    </button>
                </div>
            )}
            {transactions.slice(0, 5).map((tx) => (
                <Fragment key={tx}>
                    <div class="flex justify-between items-center py-2 w-full space-x-5 gap-y-10">
                    <img src="/assets/icons/wallet.svg" alt="Icono Transacción" class="size-6" />
                    <div class="flex flex-col w-full">
                        <h1 class="text-sm">{tx.description}</h1>
                        <p class="text-[12px] font-extralight">{tx.date}</p>
                    </div>
                    <h1 class="text-sm">${tx.amount}</h1>
                    </div>
                    <hr />
                </Fragment>
                ))}
        </div>
    </div>
</a>